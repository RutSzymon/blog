<% if current_user %>
  <%= form_for @user, :html => {:multipart => true} do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <div class="red">
      <%= f.error_message_on :email %>
    </div>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :surname %>
    <%= f.text_field :surname %>

    <%= f.label :avatar %>
    <p><%= f.file_field :avatar %></p>
    
    <%= f.submit %>
  <% end %>
<% end %>